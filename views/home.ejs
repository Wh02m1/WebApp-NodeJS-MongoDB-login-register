}

nav a:hover {
  text-decoration: underline;
}

main {
  padding: 2rem;
}

#hero {
  align-items: center;
  background-size: cover;
  display: flex;
  flex-direction: column;
  height: 600px;
  justify-content: center;
  text-align: center;
}

#hero h2 {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.btn-primary {
  background-color: #00bfff;
  border: none;
  border-radius: 4px;
  color: #fff;
  cursor: pointer;
  font-size: 1.2rem;
  padding: 1rem 2rem;
  text-decoration: none;
  transition: all 0.3s ease;
  opacity: 0.8;
